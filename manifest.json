{
  "manifest_version": 3,
  "name": "Cache Clearer",
  "version": "1.4.0",
  "description": "Clear browser cache with one click - works on Chrome and Edge - useful for web development",
  "permissions": [
    "browsingData",
    "storage",
    "cookies",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "clear-cache": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Clear browser cache"
    }
  }
}
